<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.page_classes %>">
  <div class="site">
    <%# Header %>
    <header id="gh-head" class="gh-head gh-outer">
      <div class="gh-head-inner gh-inner">
        <div class="gh-head-brand">
          <div class="gh-head-brand-wrapper">
            <a href="<%= site.metadata.url %>" class="gh-head-logo">
              <% if site.metadata.logo %>
                <img src="<%= site.metadata.logo %>" alt="<%= site.metadata.title %>">
              <% else %>
                <%= site.metadata.title %>
              <% end %>
            </a>
          </div>
          <button class="gh-search gh-icon-btn" aria-label="search this site" data-ghost-search>TODO: SEARCH ICON</button>
          <button class="gh-burger"></button>
        </div>
        <%# Nav %>
        <nav class="gh-head-menu">
          <%= render "navigation" %>
        </nav>

        <div class="gh-head-actions">

        </div>
      </div>
    </header>

  </div>

    <%#  %>
    <main>
      <%= yield %>
    </main>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
